# Command to check nodes by nrpe
define command{
      command_name   check_nrpe_1arg
      command_line   $USER1$/check_nrpe -H $HOSTADDRESS$ -t 20 -c $ARG1$
}

# Command to check nodes by nrpe (no SSL)
define command{
      command_name   check_nrpe_nossl_1arg
      command_line   $USER1$/check_nrpe -n -H $HOSTADDRESS$ -t 20 -c $ARG1$
}

