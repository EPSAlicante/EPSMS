### MYSQL ROLE ###
# Path my.cnf
#pathMysqlConf: /etc/mysql/my.cnf

## Path Inventory Directory
##pathInventoryDirectory: /root/inventory

# Mysql daemon
#daemonMysql: mysql

# Mysql package
#packageMysql:
#- mysql-server
#- python-mysqldb

# Mysql log file
#logFileMysql: /var/log/mysql/mysql.log



### APACHE ROLE ###
# Apache daemon
#daemonApache: apache2

# Apache package
#packageApache: 
#- apache2-mpm-prefork

# Apache path
#pathApache: /etc/apache2

# Apache ports file config 
#pathApachePorts: /etc/apache2/ports.conf

# Apache user
#userApache: www-data

# Apache HTML path
#pathApacheHTML: /var/www

# Openssl package
#packageOpenssl: openssl



### MUNIN ROLE ###
# Munin pathHtml
#muninHtml: /var/cache/munin/www
#muninCgi: /usr/lib/munin/cgi



### WEB ROLE ###
# Web pathHtml
#webHtml: /var/www/web

# Web pages Path
#webFiles: /etc/ansible/roles/web/files

# PHP package
#packagePhp:
#- libapache2-mod-php5
#- php5-mysql

# PhpMyAdmin package
#packagePhpMyAdmin:
#- phpmyadmin


### WIKI ROLE ###
# Wiki package
#packageWiki:
#- dokuwiki

# Path to wiki plugins
#pathPluginsWiki: /var/lib/dokuwiki/lib/plugins



### NAGIOS ROLE ###
# Nagios package
#packageNagios: 
#- nagios3
#- nagios-nrpe-plugin


##################
### NODES ROLE ###
##################
# Package Manager
packageManager: apt 

# Base packages
basePackages:
- bash
- coreutils
- grep
- sed
- gawk
- net-tools
- findutils
- dmidecode
- util-linux

# Munin Node daemon
daemonMuninNode: /etc/init.d/munin-node

# Munin Node package
packageMuninNode: 
- munin-node

# Munin Node configuration File
confFileMuninNode: /etc/munin/munin-node.conf

# Nagios Nrpe daemon
daemonNagiosNrpe: /etc/init.d/nagios-nrpe-server

# Nagios Nrpe package
packageNagiosNrpe: 
- nagios-nrpe-server

# Nagios Nrpe configuration File
confFileNagiosNrpe: /etc/nagios/nrpe.cfg

# Nagios Nrpe plugins Path
pluginsPathNagiosNrpe: /usr/lib/nagios/plugins
