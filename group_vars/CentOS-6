### ANSIBLE ROLE ###
# Path Ansible Library
pathAnsibleLibrary: /usr/share/ansible

# Ansible package
packageAnsible:
- less
- nmap
- rsync
- bind-utils
- coreutils
- sshpass
- python-pip



### MYSQL ROLE ###
# Path my.cnf
pathMysqlConf: /etc/my.cnf

## Path Inventory Directory
#pathInventoryDirectory: /root/inventory

# Mysql daemon
daemonMysql: mysqld

# Mysql package
packageMysql:
- MySQL-python
- mysql
- mysql-server

# Mysql log file
logFileMysql: /var/log/mysqld.log



### APACHE ROLE ###  
# Apache daemon
daemonApache: httpd

# Apache package
packageApache: 
- httpd 
- python-passlib

# Apache ports file config
pathApachePorts: /etc/httpd/conf/httpd.conf

# Apache path
pathApache: /etc/httpd

# Apache user
userApache: apache

# Apache HTML path
pathApacheHTML: /var/www/html

# Openssl package
packageOpenssl: openssl



### MUNIN ROLE ###
# Munin pathHtml
muninHtml: /var/www/html/munin
